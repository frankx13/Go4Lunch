<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_view_items_container_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/list_view_items_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/list_view_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:ems="8"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/restaurant_name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_view_place_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/list_view_place_image"
            android:ellipsize="end"
            android:ems="4"
            android:text="@string/_50m"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/list_view_place_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_view_place_distance"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/list_view_place_image"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:ellipsize="end"
            android:ems="4"
            android:paddingStart="15dp"
            android:text="(0)"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/list_view_place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_view_place_name"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:ems="10"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/address_of_the_place"
            android:textColor="#000" />

        <TextView
            android:id="@+id/list_view_place_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_view_place_address"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:ems="12"
            android:maxLines="2"
            android:text="@string/schedule_time_sample"
            android:textColor="#000"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/star_rating1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/list_view_place_likes"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/list_view_place_image"
            android:background="@drawable/ic_star_yellow_24dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/star_rating2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/list_view_place_likes"
            android:layout_marginTop="7dp"
            android:layout_toStartOf="@id/star_rating1"
            android:background="@drawable/ic_star_yellow_24dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/star_rating3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/list_view_place_likes"
            android:layout_marginTop="7dp"
            android:layout_toStartOf="@id/star_rating2"
            android:background="@drawable/ic_star_yellow_24dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/list_view_place_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_app2" />

        <Button
            android:id="@+id/btnImg"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:text="OK PICS"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>