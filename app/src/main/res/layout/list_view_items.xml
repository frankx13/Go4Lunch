<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_view_items_container_parent">

    <RelativeLayout
        android:id="@+id/list_view_items_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/list_view_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Restaurant Name"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/list_view_place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_view_place_name"
            android:layout_margin="2dp"
            android:text="Address of the place"
            android:textColor="#000"/>


        <ImageView
            android:id="@+id/list_view_place_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"
            android:background="@drawable/icon_app2"/>


    </RelativeLayout>


</RelativeLayout>